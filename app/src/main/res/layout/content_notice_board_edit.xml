<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              tools:showIn="@layout/activity_notice_board_edit">

    <TextView
        android:id="@+id/notice_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="Title"/>

    <EditText
        android:id="@+id/notice_edit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notice_text_title"
        android:inputType="text"
        android:paddingBottom="8dp"
        android:textColor="#000"
        android:textSize="20sp"
    />

    <TextView
        android:id="@+id/notice_text_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notice_edit_title"
        android:paddingBottom="8dp"
        android:text="Message"/>

    <EditText
        android:id="@+id/notice_edit_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/notice_text_message"
        android:inputType="text"
        android:paddingBottom="8dp"
        android:textColor="#000"
        android:textSize="14sp"/>

</LinearLayout>