<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.adam.quickroster">

    <uses-sdk android:minSdkVersion="14" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".misc.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".login.WelcomeActivity"
            android:label="QuickRoster">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".shifts.ShiftView" />
        <activity
            android:name=".menu.Menu" />
        <activity
            android:name=".shifts.AddShiftActivity"
            android:label="Add Shift" />
        <activity
            android:name=".shifts.RemoveShiftActivity"
            android:label="Remove Shift" />
        <activity
            android:name=".login.RegisterBusinessActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".login.LoginActivity"
            android:label="Log In" />
        <activity
            android:name=".staff.StaffHomeActivity"
            android:label="Staff Dashboard" />
        <activity
            android:name=".staff.AddStaffMemberActivity"
            android:label="Add Staff Member" />
        <activity
            android:name=".staff.EditStaffMemberActivity"
            android:label="Edit Staff Member" />
        <activity
            android:name=".staff_options.ContactEmployerActivity"
            android:label="Contact Employer" />
        <activity
            android:name=".staff.BusinessDetailsActivity"
            android:label="Business Details" />
        <activity
            android:name=".fragments.ContentMain"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".notice_board.NoticeEdit" />
        <activity
            android:name=".notice_board.NoticeView"
            />
    </application>

</manifest>