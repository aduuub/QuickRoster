<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_add">

    <TextView
        android:id="@+id/dateChooser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Choose a Date"
        android:paddingBottom="30dp"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/pickStartTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Choose a Start Time"
        android:paddingBottom="30dp"
        android:paddingLeft="16dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/pickEndTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Choose an End Time"
        android:paddingBottom="30dp"
        android:paddingLeft="16dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/addStaffSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="30dp"
        android:paddingLeft="12dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/addShiftDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter details of the shift"
        android:paddingBottom="40dp"
        android:paddingLeft="16dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/addNewShiftSubmitButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Create Shift" />

</LinearLayout>
