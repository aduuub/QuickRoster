<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.adam.quickroster">

    <uses-sdk android:minSdkVersion="14" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".misc.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".login.WelcomeActivity"
            android:label="Welcome to QuickRoster">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".shifts.CalendarViewActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".shifts.ShiftListView"
            android:label="Shifts" />
        <activity
            android:name=".menu.Menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".shifts.AddShiftActivity"
            android:label="Add Shift"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".shifts.RemoveShiftActivity"
            android:label="Remove Shift"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".login.RegisterBusinessActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".login.LoginActivity"
            android:label="Log In"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".login.LoginSuccessfulActivity"
            android:label="Successfully Logged In"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".staff.StaffHomeActivity"
            android:label="Staff Dashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".staff.AddStaffMemberActivity"
            android:label="Add Staff Member"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".staff.EditStaffMemberActivity"
            android:label="Edit Staff Member"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".staff.StaffListView"
            android:label="Staff" />
        <activity android:name=".staff.StaffListViewAdapter" />
        <activity
            android:name="com.example.adam.quickroster.notice_board.NoticeBoardActivity"
            android:label="Notice Board"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.example.adam.quickroster.notice_board.NoticeBoardListAdapter"
            android:label="@string/title_activity_notice_board_list_adapter"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".staff_options.ContactEmployerActivity"
            android:label="Contact Employer" />
        <activity
            android:name=".staff.BusinessDetailsActivity"
            android:label="Business Details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ContentMain"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>