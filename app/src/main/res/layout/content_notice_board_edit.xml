<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_notice_board_edit">

    <TextView
        android:id="@+id/notice_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:paddingBottom="8dp"/>

    <EditText
        android:id="@+id/notice_edit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:layout_below="@id/notice_text_title"
        android:textSize="20sp"
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/notice_text_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message"
        android:layout_below="@id/notice_edit_title"
        android:paddingBottom="8dp"/>

    <EditText
        android:id="@+id/notice_edit_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:textSize="14sp"
        android:textColor="#000"
        android:layout_below="@+id/notice_text_message"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</LinearLayout>